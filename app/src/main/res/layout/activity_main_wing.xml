<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaison.aero.MainWingActivity">

    <TextView
        android:id="@+id/textViewWing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Choose the wing type you are working at.."
        android:textSize="20sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/buttonTaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewWing"
        android:layout_below="@+id/textViewWing"
        android:layout_marginStart="51dp"
        android:layout_marginTop="139dp"
        android:text="Taper Wing" />

    <Button
        android:id="@+id/buttonStraight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonTaper"
        android:layout_alignBottom="@+id/buttonTaper"
        android:layout_alignEnd="@+id/textViewWing"
        android:layout_marginEnd="43dp"
        android:text="Straight Wing" />

    <Button
        android:id="@+id/buttonDelta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonTaper"
        android:layout_below="@+id/buttonTaper"
        android:layout_marginTop="88dp"
        android:text="Delta Wing" />

    <Button
        android:id="@+id/buttonDihedral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonDelta"
        android:layout_alignStart="@+id/buttonStraight"
        android:text="Dihedral Wing" />

</RelativeLayout>
