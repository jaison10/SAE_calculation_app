<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.jaison.aero.MainActivity">

    <ImageButton
        android:id="@+id/ImageButtonDrone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ImageButtonPlane"
        android:layout_marginTop="194dp"
        android:background="#ffffffff"
        android:scaleType="fitCenter"
        android:scaleX=".4"
        android:scaleY=".3"
        android:src="@drawable/drone6" />

    <ImageButton
        android:id="@+id/ImageButtonPlane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="#ffffffff"
        android:scaleType="fitCenter"
        android:scaleX=".4"
        android:scaleY=".32"
        android:src="@drawable/plane2" />

    <TextView
        android:id="@+id/my_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageButtonPlane"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Choose what you want to move with.."
        android:textSize="25sp"
        android:textColor="#000000"
        />
</RelativeLayout>
